#!/usr/bin/env bash

PARENT_PATH=$(dirname $PWD)

echo "**************************************************"
echo "checking on redis setup"

if [ -z "$(which redis-server)" ]; then
    echo "redis-server not installed"
    exit 1;
fi

redis-cli set key value > /dev/null 2>&1 && redis-cli get key > /dev/null 2>&1

if [ $? -ne 0 ]; then
    echo "redis-server not started"
    exit 1;
fi

node ./prepare-db.js



