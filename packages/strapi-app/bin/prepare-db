#!/usr/bin/env node

'use strict';

const path = require('path');
process.chdir(path.dirname(__dirname));

require('dotenv');

const { prepare_db } = require('@pfapi/test-helpers');
let client = 'sqlite';
if (process.argv.length === 3) {
    client = process.argv[2];
} else if (process.env.DB) {
    client = process.env.DB;
}
prepare_db(client);
